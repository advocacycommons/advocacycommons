<%= render 'layouts/header' %>

<% maybe_star = ->(f){ @signup_form.required_fields.include?(f) ? "#{f}*" : f } %>

<div class="container-html">
  <div class="card">
    <div id="signup_container" class="card-block">
      <div class="content">
        <h1>
          <%= @signup_form.display_title %>
        </h1>
        <div>
          <%= raw(@signup_form.page_text)%>
        </div>
      </div>
      <div class="right-aside">
        <div class="call-to-action">
          <%= @signup_form.prompt_text %>
        </div>
        <%#= form_for @member, as: :person, class: 'form-inline', url: "" do |f| %>
        <%= form_tag new_group_member_path @group.id, :post do %>          
          <% @signup_form.person_fields.each do |field| %>
            <div class="entry">
              <%= label_tag maybe_star.call(field) %>
              <%= text_field_tag field %>
            </div>
          <% end %>
          <%= submit_tag @signup_form.button_text, class: "submit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

