<%= form_for(@member, as: :person, url: group_members_path(@group, @member)) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prevented this person from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <tbody>
      <tr><td>
        <div class="field">
          <%= f.label :given_name %>
          <%= f.text_field :given_name %>
          <%= f.label :family_name %>
          <%= f.text_field :family_name %>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :gender %>
          <%= f.select :gender, @member.gender_options %>
          <%= f.label :gender_identity %>
          <%= f.text_field :gender_identity %>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :party_identification %>
          <%= f.text_field :party_identification %>
        </div>
      </td></tr>


      <tr><td>
        <div class="field">
          <%= f.label :birthdate %>
          <%= f.text_field :birthdate %>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :employer %>
          <%= f.text_field :employer %>
        </div>
      </td></tr>

    <tr><td>
        <div class="field">
          <%= f.label :email_address %>
          <%= f.text_field :primary_email_address %>
        </div>
      </td></tr>
    
      <tr><td>
        <div class="field">
          <%= f.label :phone_number %>
          <%= f.text_field :primary_phone_number %>
        </div>
      </td></tr>
      
    
  <tr><td>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
  </td></tr>
<% end %>
