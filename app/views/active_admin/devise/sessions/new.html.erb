<div class="login-content pt-5">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group row mt-5">
        <%= f.label :email, class: "col-2 col-form-label mr-4" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control col-md-9" %>
      </div>
    
      <div class="field form-group row">
        <%= f.label :password, class: "col-2 col-form-label mr-4" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-9" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="col-md-10 mt-4 float-right pr-0">
        <div class="row">
            <div class="actions col-md-3">
                <%= f.submit "Log in", class: "btn btn-success" %>
            </div>
          <% end %>
          <div class="col-md-1 text-center">or</div>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <div class="col-md-8">
                  <span class="fa fa-facebook"></span>
                  <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-facebook' do %>
                    <%= image_tag 'facebook-logo.svg', class: 'facebook-icon' %> 
                    <span>Continue with <%= OmniAuth::Utils.camelize(provider) %></span>
                  <% end %>
                  <br />
              </div>
            <% end -%>
          <% end -%>
        </div>
      </div>

      <div class="clearfix"></div>
      <div class="col-md-12 mt-4 text-right">
          <%= render "devise/shared/links" %>          
      </div>
</div>
