<!DOCTYPE html>
<html>
	<head>
    <meta charset="utf-8">
  </head>

  <body>
  <form role="form">
    <%= form_tag("affiliates", method: "post") do %>

      <div class="field">
        <%= label_tag "Add Affiliate" %>
        <%= collection_select(:affiliation, :affiliated_id, @groups.all, :id, :name) %>
      </div>


      <div class="actions">
        <%= submit_tag("Add Affiliate") %>
      </div>
    <% end %>
  </form>
  </body>
</html>