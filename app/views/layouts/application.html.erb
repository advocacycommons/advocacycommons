<!DOCTYPE html>
<html>
  <head>
    <title>Affinity</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://use.fontawesome.com/9913cefd51.js"></script>
  </head>

  <body>
    <p></p>
    <div class="container">
      <% if notice then %>
      <div class="alert alert-notice alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= notice %>
      </div>
      <% end %>
      <% if alert then %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= alert %>
      </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
