<!DOCTYPE html>
<html>
  <head>
    <title>Affinity</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://use.fontawesome.com/9913cefd51.js"></script>
  </head>  
  <body>
    <div className='page-header'>
      <div className="row container">
        <div className="col-10">
          <h2>
            <a href="/" className="affinity-logo"><img src="/images/affinity-logo.svg" width="230" /></a>
            <small style={{ position: 'relative', bottom: '-5px', marginLeft: '5px' }}>
              <!-- this is where current group renders -->
            </small>
          </h2>
        </div>

        <div className="col-2 text-right">
            <button className="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span>
              <!-- this is where current user name renders --> </span>
            </button>
              <%= link_to 'Account', profile_index_url %>
              <%= link_to 'Logout', destroy_person_session_path %>
        </div>

      </div>
      <br />
    </div>
    <header class="navbar navbar-fixed-top navbar-inverse">
    <nav class="navbar navbar-trans navbar-default navbar-fixed-top" role="navigation" id="topnavbar">
      <ul className="nav nav-tabs">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/groups#dashboard">
              <span></span>
            </a>

            <li>
              <%= link_to "Dashboard", 'dashboard' %>
            </li>
            <li>
              <%= link_to "Groups", 'affiliates' %>
            </li>
            <li>
              <%= link_to "All Members", 'members' %>
            </li>
            <li>
              <%= link_to "All Events", 'events' %>
            </li>
        </div> <!-- /.container-fluid -->
      </ul>
    </nav>
    </header>
  </body>
  </html>