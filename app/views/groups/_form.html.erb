    <%= form_for(group) do |f| %>
      <% if group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
          <ul>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <tbody>
      <tr><td>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
      </td></tr>
      
      <tr><td>
        <div class="field">
          <%= f.label :summary %>
          <%= f.text_field :summary %>
        </div>
      </td></tr>

      <%= f.hidden_field :id %>

        <%= form_tag("affiliates", method: "POST") do %>
          <tr><td>
            <div class="field">
              <%= label_tag "Share your data and management with another group" %>
              <%= collection_select(:affiliation, :affiliated_id, Group.all, :id, :name, :prompt => true) %>
            </div>
          </td></tr>
    <tr><td>
    <div class="actions">
        <%= f.submit "Update Group", class: "btn btn-primary"%>
      </div>
    </td></tr>
         <% end %>
    <% end %>
