    <%= form_for(group) do |f| %>
      <% if group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
          <ul>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <div class="field">
        <%= f.label :summary %>
        <%= f.text_field :summary %>
      </div>

      <%= f.hidden_field :id %>

        <%= form_tag("affiliates", method: "POST") do %>
          <div class="field">
            <%= label_tag "Add Affiliate" %>
            <%= collection_select(:affiliation, :affiliated_id, @groups.all, :id, :name, :prompt => true) %>
          </div>

    <div class="actions">
        <%= f.submit %>
      </div>
         <% end %>
    <% end %>
